// SQLite schema for local development
// Rename this to schema.prisma for local development

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model BrandSettings {
  id             String   @id @default(cuid())
  name           String
  tagline        String?
  logoUrl        String?
  logoHeight     Int      @default(32)
  logoMaxWidth   Int?
  phone          String?
  email          String?
  hours          String?
  ctaPrimary     String?
  ctaSecondary   String?
  status         String   @default("Draft")
  updatedAt      DateTime @updatedAt
  createdAt      DateTime @default(now())
  
  @@map("brand_settings")
}

model BrandSettingsHistory {
  id             String   @id @default(cuid())
  name           String
  tagline        String?
  logoUrl        String?
  logoHeight     Int      @default(32)
  logoMaxWidth   Int?
  phone          String?
  email          String?
  hours          String?
  ctaPrimary     String?
  ctaSecondary   String?
  publishedAt    DateTime @default(now())
  version        Int      @default(1)
  
  @@map("brand_settings_history")
}

model AdminUser {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("admin_users")
}

